        xmlns="http://www.example.com/vouchers"
        xsi:noNamespaceSchemaLocation="vouchers.xsd">
    <journey transport="air">
        <id>x1</id>
        <country>USA</country>
        <days-number>10</days-number>
        <cost>9000</cost>
        <hotel name="Grand Hotel" rate="5">
            <meal>AL</meal>
            <apartment-type>LUXE</apartment-type>
            <apartment-size>3</apartment-size>
